{
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "rootDir": "src",
    "target": "es5",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}